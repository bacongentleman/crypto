

<%- include('partials/head') %> 

<body>

    <%- include ('partials/navbar') %> 



  <div id="mainTable">
    
    <table   class="table table-striped table-hover bootstrapTable1">
        <thead id="tableHeaderHome">
    
            <tr> 
                <th>Rank</th>
                <th>Name</th>
                <th>Price</th>
                <th>Market Cap</th>
                <th>Circulating Supply</th>
            </tr>
        
        </thead>

        
            <% for( let d of data ) { %>
              <%   const priceUpdate = d.quote.USD.percent_change_24h; %> 
              
                <tr class="tableRowsIndex"> 
                    <td> <%= d.cmc_rank %> </td>
                    <td id="coinName"> <span class="coinLogo"> </span> <a href="/show/<%=d.cmc_rank %>">   <%= d.name %>  <span class="nameTag"><%=d.symbol%></span> </a> </td>
                    <td class="dailyChange" hidden> <%= d.quote.USD.percent_change_24h %> </td>
                    <td class="price">  $<%= commaNum( d.quote.USD.price.toFixed(2) ) %> </td>
                    <td> $<%= commaNum( d.quote.USD.market_cap.toFixed(2) ) %> </td>
                    <td> $<%= commaNum( d.circulating_supply.toFixed(2) )%> </td>
                </tr>
            <% } %>
        
       
        
    </table>
    
</div>





<script src="/bootstrap/bootstrap.min.js"></script>
<script src="/app.js"></script>
</body>
</html>